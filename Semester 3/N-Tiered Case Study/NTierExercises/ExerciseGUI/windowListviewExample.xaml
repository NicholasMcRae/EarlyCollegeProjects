<Window x:Class="windowListviewExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="windowListviewExample" Height="300" Width="300">
    <Grid>
        <ListView Height="100" HorizontalAlignment="Left" Margin="114,88,0,0" Name="listViewNames" VerticalAlignment="Top" Width="120">
            <ListView.View>
                <GridView>
                <GridViewColumn Width="110" Header="First Name"
           DisplayMemberBinding="{Binding FirstName}" />
                <GridViewColumn Width="110" Header="Last Name"
           DisplayMemberBinding="{Binding LastName}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Button" Height="23" HorizontalAlignment="Left" Margin="112,37,0,0" Name="buttonLoad" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>
