<Window x:Class="windowMainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="windowMainMenu" Height="300" Width="300">
    <Grid>
        <Menu Height="21" HorizontalAlignment="Stretch" Name="menuMain" VerticalAlignment="Top">
            <MenuItem Header="File" Name="MenuItemFile">
                <MenuItem Name="menuItemFileClose" Header="Close" />
            </MenuItem>
            <MenuItem Header="Employee" Name="menuItemEmployeeGroup">
                <MenuItem Name="menuItemEmployeeView" Header="View" />
                <MenuItem Name="menuItemEmployeeAdd" Header="Add" />
                <MenuItem Name="menuItemEmployeeUpdate" Header="Update"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
